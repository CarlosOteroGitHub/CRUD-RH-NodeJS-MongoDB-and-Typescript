<%- include ("../layouts/header.ejs") %>

<br>
<div class="card">
    <div class="card-header">
        <h3>Listado de Empleados</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Nacimiento</th>
                    <th>Correo</th>
                    <th>Descripci√≥n</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < empleados.length; i++){ %>
                    <tr>
                        <td><%= empleados[i]._id %></td>
                        <td><%= empleados[i].nombre %></td>
                        <td><%= empleados[i].nacimiento %></td>
                        <td><%= empleados[i].correo %></td>
                        <td><%= empleados[i].descripcion %></td>
                        <td>
                            <form class="form-inline" method="get" action="/empleados/actualizar/<%= empleados[i]._id %>">
                                <button class="btn btn-primary" type="submit">Editar</button>
                            </form>
                        </td>
                        <td>
                            <form class="form-inline" method="get" action="/empleados/eliminar/<%= empleados[i]._id %>">
                                <button class="btn btn-danger" type="submit">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a class="btn btn-success" href="/empleados/crear" type="button">Crear Empleado</a>
    </div>
</div>

<%- include ("../layouts/footer.ejs") %>